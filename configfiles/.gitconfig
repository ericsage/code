# ----> CONTENTS <---- #
# 1. User
# 2. Options
# 3. Aliases
# 4. Filters
# -------------------- #

# ----------------------------- #
# ---------> U S E R <--------- #
# ----------------------------- #
[user]
  name = Eric Sage
  email = eric.david.sage@gmail.com
# ----------------------------- #

# ----------------------------------- #
# ---------> O P T I O N S <--------- #
# ----------------------------------- #
[core]
  # > Use vim as the default editor
  editor = vim
  # > Page files uses less, set tab spots at multiples of 4
  pager = less -x4
  # > Set global ignore file
  excludesfile = $HOME/.gitignore

[push]
  # > Find and push only to the same branch on the remote
  default = simple

[http]
  # > Don't verify https connections
  sslVerify = false
# ----------------------------------- #

# ----------------------------------- #
# ---------> A L I A S E S <--------- #
# ----------------------------------- #

# ----> URL <---- #
[url "https://github.com/"]
  insteadOf = gh:

[url "https://gist.github.com/"]
  insteadOf = gist:

[url "https://bitbucket.org/"]
  insteadOf = bb:
# --------------- #

# ----> COMMAND <---- #
[alias]
  # > Output all aliases
  forgot = "!git config -l | grep alias | cut -c 7-"
  # > Files different from master on current branch
  fdm = !git diff origin/master... --name-status
  cp = cherry-pick
  st = status -s
  cl = clone
  ci = commit
  co = checkout
  br = branch
  diff = diff --word-diff
# ------------------ #

# ----------------------------------- #

# ----------------------------------- #
# ---------> F I L T E R S <--------- #
# ----------------------------------- #
# > A filter for large media files
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
# ----------------------------------- #

